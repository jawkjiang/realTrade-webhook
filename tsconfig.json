{
    "compilerOptions": {
      "target": "es6",                                  
      "module": "commonjs",                             
      "strict": true,                                   
      "esModuleInterop": true,                          
      "skipLibCheck": true,                             
      "forceConsistentCasingInFileNames": true,         
      "outDir": "./dist",                               
      "rootDir": "./src",                               
      "resolveJsonModule": true,                        
      "noImplicitAny": true,                            
      "noUnusedLocals": true,                           
      "noUnusedParameters": true,                       
      "noImplicitReturns": true,                        
      "noFallthroughCasesInSwitch": true                
    },
    "include": ["src/**/*"],                            
    "exclude": ["node_modules", "**/*.spec.ts"]         
}
  